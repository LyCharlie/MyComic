<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="comicDetail"
            type="me.masteryi.mycomic.beans.ComicCover" />
        <variable
            name="clickHandler"
            type="me.masteryi.mycomic.base.ClickHandler" />
    </data>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{clickHandler.onClick}"
        android:stateListAnimator="@animator/lift_card">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:padding="@dimen/text_medium">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.facebook.drawee.view.SimpleDraweeView
                    xmlns:fresco="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cover"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    bind:imageUrl="@{comicDetail.coverImg}"
                    fresco:roundedCornerRadius="4dp"
                    fresco:viewAspectRatio="0.75" />
                <TextView
                    android:id="@+id/state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/cover"
                    android:layout_alignLeft="@+id/cover"
                    android:layout_alignRight="@+id/cover"
                    android:background="@color/mask"
                    android:gravity="center"
                    android:text="@{comicDetail.state}"
                    android:textColor="@color/white" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/title"
                    android:text="@{comicDetail.title}"
                    style="@style/recent_comic_detail_title" />
                <TextView
                    android:id="@+id/author"
                    android:text="@{comicDetail.author}"
                    style="@style/recent_comic_detail_text" />
                <TextView
                    android:id="@+id/type"
                    android:text="@{comicDetail.type}"
                    style="@style/recent_comic_detail_text" />
                <TextView
                    android:id="@+id/latest_chapter"
                    android:text="@{comicDetail.latestChapter}"
                    style="@style/recent_comic_detail_text" />
                <TextView
                    android:id="@+id/update_time"
                    android:text="@{comicDetail.updateTime}"
                    style="@style/recent_comic_detail_text" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>