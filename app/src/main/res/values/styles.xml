<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyTheme" parent="AppTheme">
    </style>

    <style name="MyAppbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="MyPopupTheme" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <style name="ComicChapterTitle" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="text_single_line">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <!--漫画章节详情标题文字样式-->
    <style name="comic_chapter_title" parent="text_single_line">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
    </style>
</resources>
